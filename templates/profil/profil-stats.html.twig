{% extends 'base.html.twig' %}

{% block title %} Handgames {% endblock %}

{% block body %}
    <div class="titleHome mb-5">
        <h2>Stats</h2>
    </div>
    <div class="container">
        <div class="row">
            <div class="col-12 d-flex justify-content-center">

                <div class="avatar-stats mb-5">
                </div>
            </div>
            <p class="level-stats mb-5">Level statistique.level</p>
        </div>

        <div class="row mb-5">
            <div class="col-12 d-flex">
                <div class="col-4 stats-games stats-win">
                    <p class="stats-center">statistique.nbrWin wins</p>
                </div>
                <div class="col-4 stats-games stats-lose">
                    <p class="stats-center">statistique.nbrLose loses</p>
                </div>
                <div class="col-4 stats-games stats-total">
                    <p class="stats-center">statistique.nbrPartie total party</p>
                </div>
            </div>
        </div>

        <div class="titleHome mb-5">
            <h2>Rewards</h2>
        </div>

        <div id="carouselExampleCaptions" class="carousel slide" data-bs-ride="carousel">
            <div class="carousel-inner d-flex">
                <div class="carousel-item active">
                    <img src="build/image/trophee-test.png" class="d-block image-reward" alt="...">
                    <div class="carousel-caption d-none d-md-block">
                        <p class="title-trophee">First slide label</p>
                    </div>
                </div>
                <div class="carousel-item">
                    <img src="build/image/trophee-test.png" class=" d-block image-reward" alt="...">
                    <div class="carousel-caption d-none d-md-block">
                        <p class="title-trophee">Second slide label</p>
                    </div>
                </div>
                <div class="carousel-item">
                    <img src="build/image/trophee-test.png" class="d-block image-reward" alt="...">
                    <div class="carousel-caption d-none d-md-block">
                        <p class="title-trophee">Third slide label</p>
                    </div>
                </div>
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="prev">
                <span class="carousel-control-prev-icon bg-color-control" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="next">
                <span class="carousel-control-next-icon bg-color-control" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
            </button>
        </div>
    </div>



{% endblock %}