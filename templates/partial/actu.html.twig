<div class="actu-content">

    <h2 class="titre-actu m-3">{{ new.titre }}</h2>
        <img class="img-news" src="{{ new.PathImg }}" alt="Image de l'actualite">

    <div class="card-body actu-body">

        <p class="card-text">{{ new.DescriptionCourte }}</p>

        <div class="created-at-new text-align-left">
            <p>Date du post : {{ new.CreatedAt|date('d-m-Y') }}</p>
        </div>

        <div class="w-100 d-flex justify-content-center">
            <button id="btn-actu" class="bouton-actu">More info</button>
        </div>

    </div>
</div>


    <div class="overlay overlay-actu">
        <div class="close-popup close-popup-actu">
        </div>

        <div class="popup popup-actu-size">
            <h2>{{ new.titre }}</h2>
            <div class="close close-actu">&times;</div>
            <div class="desc-longue">
                <p>{{ new.description }}
                </p>
            </div>
        </div>
    </div>

