<header class="p-3 bg-light">
        <div class="container-fluid d-flex justify-content-between">
            <a href="{{ path('home') }}" class="d-flex text-decoration-none">
                <div class="d-flex align-items-center">
                    <div class="logo-header me-2">
                        <img src="https://www.freepnglogos.com/uploads/png-50-px-png-svg-eps-pdf-approximate-size-we-21.png" width="50px" height="auto">
                    </div>
                    <h1>Handgames</h1>
                </div>

            </a>
            
            <div class="login-signup-div">
            {# header if connected, else login button #}
                {% if app.user %}
                    <div class="logged-global-div">
                        <div class="profil-pic-size me-3">
                            <img src="{{ app.user.avatar.path }}" alt="profil pic" width="100%" height="auto">
                        </div>
                        <div class="me-2">
                            <div>
                                <span>{{ app.user.pseudo }}</span>
                            </div>
                            <div>
                                <span>level {{ currentUserLevel() }}</span>
                            </div>
                        </div>
                        <div class="separator-header me-2"></div>
                        <div>
                            <div>
                                <span>click <a href="{{ path('app_logout') }}">here</a></span>
                            </div>
                            <div>
                                <span>to disconnect</span>
                            </div>
                        </div>
                    </div>
                {% else %}
                    <div class="bouton-login bouton">Login</div>
                    <div class="bouton-signup bouton">Signup</div>
                {% endif %}
            </div>
            
            {# popup login #}
            <div id="popup-login" class="overlay">
                <div class="close-popup close-popup-login"></div>
                <div class="popup popup-login-size">
                    <h2>Welcome</h2>
                    <div id="close-login" class="close">&times;</div>
                    <hr class="bg-dark border-2 border-top border-dark mb-3">
                    <div>
                        {{ loginFormRender()|raw }}
                    </div>
                </div>
            </div>

            {# popup signup #}
            <div id="popup-signup" class="overlay">
                <div class="close-popup close-popup-signup"></div>
                <div class="popup popup-signup-size">
                    <h2>Signup</h2>
                    <div id="close-signup" class="close">&times;</div>
                    <hr class="bg-dark border-2 border-top border-dark mb-3">
                    <div>
                        {{ signupFormRender()|raw }}
                    </div>
                </div>
            </div>
            
            {# dropdown petits écran #}
            <div class="dropdown">
                <a class="burger text-decoration-none" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown">
                    <svg 
                        aria-hidden="true" 
                        focusable="false" 
                        data-prefix="fas" data-icon="bars" 
                        class="svg-inline--fa fa-bars fa-w-14" role="img" 
                        xmlns="http://www.w3.org/2000/svg" viewBox="0 0 448 512">
                        <path fill="currentColor" d="M16 132h416c8.837 0 16-7.163 16-16V76c0-8.837-7.163-16-16-16H16C7.163 60 0 67.163 0 76v40c0 8.837 7.163 16 16 16zm0 160h416c8.837 0 16-7.163 16-16v-40c0-8.837-7.163-16-16-16H16c-8.837 0-16 7.163-16 16v40c0 8.837 7.163 16 16 16zm0 160h416c8.837 0 16-7.163 16-16v-40c0-8.837-7.163-16-16-16H16c-8.837 0-16 7.163-16 16v40c0 8.837 7.163 16 16 16z"></path>
                    </svg>
                </a>
                {# si utilisateur connecté : son pseudo, son lvl et possibilité de déco, sinon login et signup button #}
                {% if app.user %}
                    <div id="dropdown-lil-screen" class="dropdown-menu" aria-labelledby="navbarDropdown">
                        <div class="logged-global-div">
                            <div class="profil-pic-size mx-3">
                                <img src="{{ app.user.avatar.path }}" alt="profil pic" width="100%" height="auto">
                            </div>
                            <div class="me-2">
                                <div>
                                    <span>{{ app.user.pseudo }}</span>
                                </div>
                                <div>
                                    <span>level {{ currentUserLevel() }}</span>
                                </div>
                            </div>
                            <div class="separator-header me-2"></div>
                            <div>
                                <div>
                                    <span><a href="{{ path('app_logout') }}">click here</a></span>
                                </div>
                                <div>
                                    <span><a href="{{ path('app_logout') }}">to disconnect</a></span>
                                </div>
                            </div>
                        </div>
                    </div>
                {% else %}
                <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                    <li><div id="dropdown-login" class="dropdown-item">Login</div></li>
                    <li><div id="dropdown-signup" class="dropdown-item">Signup</div></li>
                </ul>
                {% endif %}
            </div>
        </div>
</header>
